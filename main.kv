#:import utils kivy.utils

<PongBall>:
    size: 40, 40
    canvas:
        Color:
            rgba: utils.get_color_from_hex("#ffffff")
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 10, 180
    canvas:
        Color:
            rgba: utils.get_color_from_hex("#ffffff")
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right

    canvas:
        Rectangle:
            pos: self.center_x-1, 0
            size: 2, self.height

    Label:
        font_size: 50
        center_x:  root.width/4
        top: root.top-50

    Label:
        font_size: 50
        center_x: root.width*3/4
        top: root.top-50

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y
